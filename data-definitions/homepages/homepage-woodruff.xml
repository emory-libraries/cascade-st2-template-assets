      <text type="checkbox" identifier="insert-notice" label="Insert Notice?">
            <checkbox-item value="Yes" show-fields="notice"/>
      </text>
      <group identifier="notice" label="Notice">
            <text type="dropdown" identifier="notice-type" label="Type of Notice" default="General">
                  <dropdown-item value="General"/>
                  <dropdown-item value="Information"/>
                  <dropdown-item value="Warning"/>
            </text>
            <text identifier="heading" label="Heading" required="true"/>
            <text wysiwyg="true" identifier="message" label="Message" required="true"/>
      </group>
      <group identifier="toprow" label="Top Row" collapsed="true">
            <group identifier="search" label="Search" collapsed="true">
                  <text identifier="heading" label="Heading"/>
                  <asset type="block" identifier="datadef-search" label="Search Block" render-content-depth="2"/>
            </group>
            <group identifier="hero" label="Hero" collapsed="true">
                  <text type="radiobutton" identifier="type" label="Treatment" default="Basic Image" required="true">
                        <radio-item value="Basic Image"/>
                        <radio-item value="Random Image on Refresh"/>
                        <radio-item value="Timed Slideshow"/>
                        <radio-item value="Content Box"/>
                  </text>
                  <group identifier="basic-slideshow" label="Basic or Random Image or Timed Slideshow" collapsed="true">
                        <text type="dropdown" identifier="slideshow_type" label="Slideshow Type">
                              <dropdown-item value="Default (auto switch)"/>
                              <dropdown-item value="Switch with Arrows"/>
                              <dropdown-item value="Switch with Numbers"/>
                        </text>
                        <text type="checkbox" identifier="show_captions" label="Show Captions?">
                              <checkbox-item value="Yes"/>
                        </text>
                        <text identifier="interval" label="Slideshow Time Interval" help-text="For slideshow option, seconds per slide"/>
                        <group identifier="image-set" label="Image" multiple="true">
                              <asset type="file" identifier="image" label="Image 550x550" help-text="550 pixel square images will work best so that it covers all screen configurations."/>
                              <text identifier="caption" label="Caption"/>
                              <group identifier="link" label="Link">
                                    <asset type="page" identifier="page" label="Internal Page"/>
                                    <text identifier="external" label="External URL"/>
                                    <asset type="file" identifier="file" label="Document"/>
                              </group>
                        </group>
                  </group>
                  <group identifier="content-box" label="Content Box" collapsed="true">
                        <asset type="block" identifier="component" label="Content Box Component" render-content-depth="2" help-text="Select a Content Box"/>
                  </group>
            </group>
            <asset type="file" identifier="background" label="Background Image (960x380)"/>
      </group>
      <group identifier="slider" label="Slider Row" collapsed="true">
            <asset type="block" identifier="component" label="Component" multiple="true" maximum-number="8" minimum-number="1" render-content-depth="3"/>
      </group>
