<system-data-structure>
  <group identifier="thumbnail" label="Photo">
    <asset type="file" identifier="photo-bio" label="Main Photo - 150x150px"/>
  </group>
  <group identifier="page-options" label="Page Options">
    <text type="radiobutton" identifier="layout" label="Section Display" default="Accordions">
      <radio-item value="Standard"/>
      <radio-item value="Accordions"/>
    </text>
  </group>
  <group identifier="main-content-bio" label="Main Page Content">
    <text identifier="first_main" label="First Name for Sorting" required="true"/>
    <text identifier="last_main" label="Last Name for Sorting" required="true"/>
    <text type="checkbox" identifier="leadership" label="Leadership / Administration">
      <checkbox-item value="Yes"/>
    </text>
    <!-- <group identifier="photos" label="Photos" collapsed="true">
      <asset type="file" identifier="photo-bio" label="Photo"/>
     
    </group>-->
    <group identifier="roletitle" label="Roles/Titles" multiple="true">
      <text identifier="role" label="Role/Title"/>
      <text identifier="org" label="Organization/Institution"/>
    </group>
    <text wysiwyg="true" identifier="main-bio" label="Biography Text"/>
    <group identifier="contact" label="Contact Information">
      <text identifier="email" label="Email Address" required="true"/>
      <text identifier="phone" label="Phone Number" required="true"/>
      <text identifier="fax" label="Fax"/>
      <text identifier="website" label="Website URL" multiple="true"/>
      <group identifier="mailing_address" label="Mailing Address">
        <text identifier="addr_org" label="Organization"/>
        <text identifier="addr_line1" label="Street Address Line 1"/>
        <text identifier="addr_line2" label="Streeet Address Line 2"/>
        <text identifier="addr_city" label="City"/>
        <text identifier="addr_state" label="State"/>
        <text identifier="addr_zip" label="Zip Code"/>
      </group>
    </group>
    <group identifier="education" label="Education" multiple="true" collapsed="true">
      <text identifier="degree" label="Degree Type"/>
      <text identifier="details" label="Degree"/>
      <text identifier="school" label="School"/>
      <text identifier="location" label="Location"/>
      <text identifier="year" label="Year"/>
    </group>
    <group identifier="research" label="Research and Publications" collapsed="true">
      <text identifier="research-guide" label="Research Guide URL"/>
      <text wysiwyg="true" identifier="research-interests" label="Research Interests"/>
      <group identifier="publications" label="Publications">
        <group identifier="pubs" label="Collected Publication Sources" multiple="true">
          <text identifier="pubs_label" label="Publications Source (e.g. PubMed)"/>
          <text identifier="pubs_url" label="Publications URL"/>
        </group>
        <text wysiwyg="true" identifier="wysiwyg" label="Publications - Flexible Entry" help-text="List selected publications manually"/>
      </group>
    </group>
    <group identifier="teaching" label="Teaching" collapsed="true">
      <group identifier="entries" label="Courses Taught" multiple="true">
        <text identifier="link-text" label="Course Name"/>
        <asset type="page" identifier="page" label="Link to Internal Course Page"/>
        <asset type="file" identifier="file" label="-or- Document"/>
        <text identifier="external" label="-or- External URL"/>
      </group>
    </group>
    <group identifier="attachments" label="Attachments" collapsed="true">
      <asset type="file" identifier="cv" label="CV (Upload to Site first)"/>
      <text identifier="online_cv_url" label="External Bio/CV URL"/>
      <group identifier="misc_attachments" label="Other Attachments" multiple="true">
        <text identifier="attachment_label" label="Attachment Label"/>
        <asset type="file" identifier="attachment" label="Attachment"/>
      </group>
    </group>
