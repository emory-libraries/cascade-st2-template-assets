        </text>
        <text type="checkbox" identifier="show-fulltext" label="Show Full Text" help-text="Show full text status for each (if applicable)">
            <checkbox-item value="Yes"/>
        </text>
        <text type="checkbox" identifier="show-coverage" label="Show Coverage" help-text="Show years of coverage for each resource (if available)">
            <checkbox-item value="Yes"/>
        </text>
        <text type="checkbox" identifier="show-subjects" label="Show Subjects" help-text="Show list of subjects below description">
            <checkbox-item value="Yes"/>
        </text>
    </group>
