    <group identifier="current-selections" label="Current Selection Options" collapsed="true">
        <text type="checkbox" identifier="display-location" label="Display Location" help-text="Where to display the current selections">
            <checkbox-item value="Sidebar"/>
            <checkbox-item value="Main Body"/>
        </text>
    </group>
    <group identifier="results-options" label="Result List Options" collapsed="true">
        <text identifier="num" label="Results Per Page" default="25"/>
        <group identifier="search-options" label="Search">
            <text type="checkbox" identifier="use-autosuggest" label="Use Autosuggest">
                <checkbox-item value="Yes"/>
            </text>
        </group>
        <group identifier="featured-options" label="Featured">
            <text type="checkbox" identifier="show" label="Show Featured Databases" help-text="This applies to the main content area.">
                <checkbox-item value="Yes" checked="true"/>
            </text>
            <text identifier="title" label="Featured Section Title" default="Need a place to start? Try these."/>
        </group>
        <group identifier="new-options" label="New">
            <text type="checkbox" identifier="show" label="Show New Databases" help-text="This applies to the main content area.">
                <checkbox-item value="Yes"/>
            </text>
            <text identifier="title" label="New Section Title" default="Newly Added Databases"/>
        </group>
    </group>
    <group identifier="database-options" label="Database Display Options" collapsed="true">
        <text type="checkbox" identifier="use-summary" label="Use Summary View" help-text="This will create a smaller result display with an expand link to show the rest.">
            <checkbox-item value="Yes"/>
        </text>
        <text type="checkbox" identifier="show-status" label="Show Status" help-text="Show indicator for new or trial">
